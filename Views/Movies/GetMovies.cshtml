<div style="padding-top:30px">
    <h3>Список фильмов</h3>
    <table class="table">
        <tr>
            <td><p>Название</p></td>
            <td><p>Год</p></td>
            <td><p>Жанр</p></td>
            <td><p>Режиссер</p></td>
            <td><p>Описание</p></td>
            </tr>
        @foreach (var movie in ViewBag.Movies)
        {
            <tr>
                <td><p>@movie.Name</p></td>
                <td><p>@movie.Year</p></td>
                <td><p>@movie.Genre</p></td>
                <td><p>@movie.Director</p></td> 
                <td><img src="@movie.Poster" alt="Постер фильма @movie.Name"></td>
                 <td><p>@movie.Description</p></td> 
                </tr>
        }
    </table>
</div>
